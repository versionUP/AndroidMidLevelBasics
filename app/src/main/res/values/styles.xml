<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">  // to remove default actionBar for whole app
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Black.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.White.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="TextStyle.Black.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
